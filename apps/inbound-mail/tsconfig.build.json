{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": false,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "mocha"]
  },
  "include": [".eslintrc.js", "src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
